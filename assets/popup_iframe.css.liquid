@font-face {
        font-family: 'Circular';
        src: url('{{ "CircularStd-Book.otf" | asset_url }}');
        font-weight: 500; 
    	font-display: swap;
        font-style: normal;
      }

button.btn.btn-success.btn-lg.col-xs-12 {
    padding: 15px 53px;
    border: 2px solid;
    border-radius: 23px;
    font-size: 13px;
    line-height: 18px;
    font-weight: 600;
    letter-spacing: 2.21px;
    width: moz-fit-content;
    cursor: pointer;
    display: block;
    width: fit-content;
    width: -moz-fit-content;
    color: #000;
    text-decoration: none;
    background-color: #fff;
    width: 100%;
}

button.btn.btn-success.btn-lg.col-xs-12:hover{
	color: #ffffff;
  background-color: #000000;
}

h3.modal-title {
    font-size: 36px;
    line-height: 35px;
    letter-spacing: .11px;
    font-weight: 700;
}

p {
    font-size: 13px;
    line-height: 18px;
    font-family: Circular, sans-serif;
}

input#email {
    padding: unset;
    color: #7a7a7a;
    line-height: normal;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    margin: 0 16px 0 0;
    display: block;
    width: 100%;
    height: 54px;
    padding-top: 0;
    padding-bottom: 0;
    border: 0;
    padding-left: 24px;
    font-size: 13px;
    border-radius: 23px;
    background-color: #fff;
    font-family: Circular;
}