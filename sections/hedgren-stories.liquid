{{ 'hedgren-stories.css' | asset_url | stylesheet_tag }}
{% for article in blog.articles %}
<div class="img-text-wrapper story-wrap {{ block.settings.background }}">
  {% assign evenodd = forloop.index | modulo: 2 %}
  <div class="img-text container flex-box {% if evenodd == 0 %}order-reversed{% else %}{{ block.settings.order }}{% endif %}">
    <div class="img-text-text">
      <h2 class="img-text-text-heading {{ block.settings.heading_color }}">
        {{ article.title }}
      </h2>
      <div class="img-text-text-subheading">
        {{ article.tags.first }}
      </div>
      <div class="img-text-text-content">
        {{ article.excerpt }}
      </div>
      {% if block.settings.button_label %}
      <a href="{% if block.settings.button_link %}{{block.settings.button_link}}{% else %}#{% endif %}">
        {{ block.settings.button_label }} {% if block.settings.button_label != blank %}<span class="link-arows">{% include "svg-arrow" %}{% include "svg-arrow" %}</span>{% endif %}
      </a>
      {% endif %}
    </div>  
    <div class="img-text-img rel">
      <span class="image-overlay">
        {% include "svg-arrows-big" %}
      </span>    
      {%- if block.settings.image != blank -%}
            <img
              srcset="{%- if article.image.width >= 165 -%}{{ article.image | img_url: '165x' }} 165w,{%- endif -%}
                {%- if article.image.width >= 360 -%}{{ article.image | img_url: '360x' }} 360w,{%- endif -%}
                {%- if article.image.width >= 535 -%}{{ article.image | img_url: '535x' }} 535w,{%- endif -%}
                {%- if article.image.width >= 750 -%}{{ article.image | img_url: '750x' }} 750w,{%- endif -%}
                {%- if article.image.width >= 1070 -%}{{ article.image | img_url: '1070x' }} 1070w,{%- endif -%}
                {%- if article.image.width >= 1500 -%}{{ article.image | img_url: '1500x' }} 1500w,{%- endif -%}
                {{ article.image | img_url: 'master' }} {{ article.image.width }}w"
              src="{{ article.image | img_url: '1500x' }}"
              sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
              alt="{{ article.image.alt | escape }}"
              loading="lazy"
              width="{{ article.image.width }}"
              height="{{ article.image.height }}"
            >
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%} 
      <div class="extra-text{% if block.settings.order == 'order-normal' %} txt-right{% endif %}">{{ block.settings.extra_txt }}</div>
    </div>
  </div>
</div>
{% endfor %}
<span class="btn btn-center more-stories no-disp">LOAD MORE STORIES</span>
<script>
	var numItems = $('.story-wrap').length;
  if(numItems>2){
  	$('.more-stories').removeClass('no-disp');
  }
  
  $(".story-wrap").hide();
 $(".story-wrap:lt(2)").show();
  
  $('.more-stories').click(function() {
  	$(".story-wrap").show();
    $(this).addClass('no-disp');
  });
</script>
