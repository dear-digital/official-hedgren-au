<link rel="stylesheet" href="{{ 'hedgren-header.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'hedgren-header.css' | asset_url | stylesheet_tag }}</noscript>
<header class="{% if section.settings.enable_sticky_header %}sticky{% endif %}">
  <div class="upper-header flex-box justify-between flex-center">
    <div class="upper-nav-left no-t-m">
      <a href="#">English</a>
    </div>
    <nav class="header-hamburger-menu left-nav no-d">
      <button type="button" class="navbar-toggler">
        <span class="icon-bar bar1"></span>
        <span class="icon-bar bar2"></span>
        <span class="icon-bar bar3"></span>
      </button>
    </nav>
    <div class="upper-nav-center flex-box">  
      <a href="/">
        {%- if section.settings.logo != blank -%}
        <img
             src="{{ section.settings.logo | img_url: '140x' }}"              
             alt="{{shop.name}}"
             width="{{ section.settings.image.width }}"
             height="{{ section.settings.image.height }}"
             >
        {%- else -%}
        {{shop.name}}
        {%- endif -%}      
      </a>
    </div>
    <div class="upper-nav-right"> 
      {% if shop.customer_accounts_optional or shop.customer_accounts_enabled %}
      <a class="no-t-m" href="/account">{% if customer %}Account{% else %}Sign in{% endif %}</a>
      {% endif %}
      {% if section.settings.show_search %}
      <a href="/search" title="search">
        {% render "svg-search" %}
      </a>      
      {% endif %}
      <a title="cart" id="draw_cart">
        {% render "svg-cart" %}
      </a>
    </div>
  </div>
  <div class="lower-header container">
    
    
    <ul class="order-1">
      
      {%- if section.settings.menu != blank -%}
      {%- for link in section.settings.menu.links -%}
      <li class="dropdown-1 no-t-m">        
        <a href="{{ link.url }}">{{ link.title | escape }}</a>
        {%- if link.links != blank -%}
        <div class="dropdown">  
          <div class="container flex-box justify-between">
            {% if link.links.first.title == "(col-left)" %}
            <div class="nav-left-cards">
              {%- for childlink in link.links -%}
              {% if childlink.title == "(col-left)" %}
              {% assign handlesxn = childlink.url | split: "/" %}
              <div class="nav-card">
                {% assign colxn = collections[handlesxn.last] %}
                <a href="{{ colxn.url }}">
                <img src="{{ colxn.featured_image | image_url: width: 350 }}" alt="{{ colxn.title }}">
                  <div class="nav-title">{{ colxn.title }}</div>
                </a>
              </div>
              {% endif %}
              {%- endfor -%}
            </div>
            {% else %}
            <ul class="order-2">
              {%- for childlink in link.links -%}
              {% assign first_letter = childlink.title | slice: 0 %}
              {% if first_letter == "-" %}
              <li class="link-primary">
                <a href="{{ childlink.url }}">{{ childlink.title | escape | remove_first: "-" }} <span class="link-arows">{% include "svg-arrow" %}{% include "svg-arrow" %}</span></a>
              </li>
              {% elsif childlink.title != "(col)" %}
              {% if childlink.url == "#" %}
              <li class="link-heading">
                <a href="#">{{ childlink.title | escape }}</a>
              </li>
              {% else %}
              <li class="link-secondary">
                <a href="{{ childlink.url }}">{{ childlink.title | escape }} <span class="link-arows">{% include "svg-arrow" %}</span></a>
              </li>
              {% endif %}
              {% endif %}
              {%- endfor -%}
            </ul>
            {% endif %}
            <div class="nav-right-cards">
              {%- for childlink in link.links -%}
              {% if childlink.title == "(col)" %}
              {% assign handlesxn = childlink.url | split: "/" %}
              <div class="nav-card">
                {% assign colxn = collections[handlesxn.last] %}
                <a href="{{ colxn.url }}">
                <img src="{{ colxn.featured_image | image_url: width: 350 }}" alt="{{ colxn.title }}">
                  <div class="nav-title">{{ colxn.title }}</div>
                </a>
              </div>
              {% endif %}
              {%- endfor -%}
              <span class="image-overlay">
                {% include "svg-arrows-big" %}
              </span>
            </div>
          </div>
        </div>
        {%- endif -%}
      </li>
      {%- endfor -%}
      {%- endif -%}
      
      {%- if section.settings.menu2 != blank -%}
      {%- for link in section.settings.menu2.links -%}
      <li class="dropdown-1 no-d">
        <a href="{{ link.url }}">{{ link.title | escape }}</a>
      </li>
      {%- endfor -%}
      {%- endif -%}
      
    </ul>
    
    
    {% comment %}
    {%- if section.settings.menu != blank -%}
    {%- for link in section.settings.menu.links -%}
    <li>
      {%- if link.links != blank -%}
      {{ link.title | escape }}
      <ul class="">
        {%- for childlink in link.links -%}
        <li>
          {%- if childlink.links == blank -%}
          <a href="{{ childlink.url }}" class="{% if childlink.current %}active{% endif %}"{% if childlink.current %} aria-current="page"{% endif %}>
            {{ childlink.title | escape }}
          </a>
          {%- else -%}
          {{ childlink.title | escape }}

          <ul>
            {%- for grandchildlink in childlink.links -%}
            <li>
              <a href="{{ grandchildlink.url }}" class="{% if grandchildlink.current %}active{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                {{ grandchildlink.title | escape }}
              </a>
            </li>
            {%- endfor -%}
          </ul>
          {%- endif -%}
        </li>
        {%- endfor -%}
      </ul>
      {%- endif -%}
    </li>
    {%- endfor -%}
    {%- endif -%}
    {% endcomment %}
  </div>

  <div class="header-drawer no-d">
    <div class="mobile-menu-item-wrap">
      <a href="#" class="drawer-menu-item-with-img">
        <div class="drawer-menu-item-img"><img src="https://cdn.shopify.com/s/files/1/1882/4247/files/Image_2x_bc97108c-45be-44f9-bd36-781deba020c5.png?v=1636715308"></div>
        <div class="drawer-menu-item-img-text">SHOP ALL <span class="link-arows">{% include "svg-arrow-white-small" %}{% include "svg-arrow-white-small" %}</span></div>
      </a>
    </div>
    
      
        
          
          
    
    
    {%- if section.settings.menu != blank -%}
      {%- for link in section.settings.menu.links -%}
      <div class="mobile-menu-item-wrap">
        <div class="accordion-wrap">
          <div class="mobile-menu-item-with-acco accordion">
            <span class="mobile-menu-item-name">{{ link.title | escape }}</span>
            <span class="down-chev">{% include 'icon-down-chevron-black' %}</span>
          </div>
        {%- if link.links != blank -%}
        <div class="panel">
          	<div class="sub-menu-wrap flex-box justify-between">            
            {% if link.links.first.title == "(col-left)" %}
            <div class="nav-right-cards">
              {%- for childlink in link.links -%}
              {% if childlink.title == "(col-left)" or childlink.title == "(col)" %}
              {% assign handlesxn = childlink.url | split: "/" %}
              <div class="nav-card">
                {% assign colxn = collections[handlesxn.last] %}
                <a href="{{ colxn.url }}">
                <img src="{{ colxn.featured_image | image_url: width: 350 }}" alt="{{ colxn.title }}">
                  <div class="nav-title">{{ colxn.title }}</div>
                </a>
              </div>
              {% endif %}
              {%- endfor -%}
            </div>
            {% else %}
            <ul class="order-2">
              {%- for childlink in link.links -%}
              {% assign first_letter = childlink.title | slice: 0 %}
              {% if first_letter == "-" %}
              <li class="link-primary">
                <a href="{{ childlink.url }}">{{ childlink.title | escape | remove_first: "-" }} <span class="link-arows">{% include "svg-arrow" %}{% include "svg-arrow" %}</span></a>
              </li>
              {% elsif childlink.title != "(col)" %}
              {% if childlink.url == "#" %}
              <li class="link-heading">
                <a href="#">{{ childlink.title | escape }}</a>
              </li>
              {% else %}
              <li class="link-secondary">
                <a href="{{ childlink.url }}">{{ childlink.title | escape }} <span class="link-arows">{% include "svg-arrow" %}</span></a>
              </li>
              {% endif %}
              {% endif %}
              {%- endfor -%}
            </ul>
            {% endif %}
          </div>
        </div>
        {%- endif -%}
        </div>
      </div>
      {%- endfor -%}
      {%- endif -%}
    
    <div class="mobile-menu-item-wrap">
      <div class="mobile-menu-links">
    	<a href="/account">LOG IN / REGISTER <span class="link-arows">{% include "icon-right-chev-black" %}</span></a>
        <a href="#">CONTACT <span class="link-arows">{% include "icon-right-chev-black" %}</span></a>
        <a href="#">FAQ <span class="link-arows">{% include "icon-right-chev-black" %}</span></a>
        <a href="#">STORE LOCATOR <span class="link-arows">{% include "icon-right-chev-black" %}</span></a>
      </div>
    </div>
    <div class="mobile-menu-links">
        <a href="#">OUR STORY <span class="link-arows">{% include "icon-right-chev-black" %}</span></a>
        <a href="#">STORIES <span class="link-arows">{% include "icon-right-chev-black" %}</span></a>
        <a href="#">LOYALTY PROGRAM <span class="link-arows">{% include "icon-right-chev-black" %}</span></a>
      	<a class="lang" href="#">LANGUAGE - ENGLISH</a>
      </div>
    <div class="social-media-icons">
      <div class="social-icon">
        <a href="#" target="_blank">{% include "icon-fb-black" %}</a>
      </div>
      <div class="social-icon">
        <a href="#" target="_blank">{% include "icon-insta-black" %}</a>
      </div>
      <div class="social-icon">
        <a href="#" target="_blank">{% include "icon-pint-black" %}</a>
      </div>
      <div class="social-icon">
        <a href="#" target="_blank">{% include "icon-yt-black" %}</a>
      </div>
    </div>
    
  </div>
</header>


<script>
  $('.navbar-toggler').click(function() {
    if($('.header-drawer').hasClass('drawn')){
    	$('.header-drawer').removeClass('drawn');
      $('body').removeClass('no-scroll');
    } else{
    	$('.header-drawer').addClass('drawn');
      $('body').addClass('no-scroll');
    }
  });
</script>
{% schema %}
  {
    "name": "Hedgren header",
    "settings": [		
      {
         "type":"image_picker",
         "id":"logo",
         "label":"Store logo"
      },
      {
        "type": "link_list",
        "id": "menu",
        "default": "main-menu",
        "label": "Menu Desktop"
      },
      {
        "type": "link_list",
        "id": "menu2",
        "default": "main-menu",
        "label": "Menu Mobile"
      },
      {
        "type": "checkbox",
        "id": "show_search",
        "default": true,
        "label": "Show search"
      },
      {
        "type": "checkbox",
        "id": "enable_sticky_header",
        "default": true,
        "label": "Enable sticky header"
      }
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
