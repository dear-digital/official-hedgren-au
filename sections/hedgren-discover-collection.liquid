{{ 'hedgren-discover-collection.css' | asset_url | stylesheet_tag }}

<div class="discover-collection-wrapper">
  <div class="container">
    <div class="discover-coll-heading flex-box">
      <div class="side-title">
      	{{ section.settings.title_left }}
      </div>
    	<h2 class="discover-coll-main-heading">
        {{ section.settings.title_mid }}
      </h2>
      <div class="side-title">
      	{{ section.settings.title_right }}
      </div>
    </div>
    <div class="discover-coll-sub-heading no-t-m">{{ section.settings.subtitle }}</div>
    <div class="featured-collections">
      {% if settings.h_collection1 %}
      {% assign coll = settings.h_collection1 %}
    <div class="featured-coll-card">
      {% assign collection_handle = settings.h_collection1 %}
      		<div class="coll-card">
              <div class="coll-img">
              	{% if collection_handle.image %}
                	<img loading="lazy" src="{{ collection_handle.image | img_url: '350x' }}" alt="{{ collection_handle.title }}">
                {% else %}
                	{{ 'collection-1' | placeholder_svg_tag }}
				{% endif %}
              </div>
              <div class="coll-text">
                <div class="coll-title">{{ collection_handle.title }}</div>
              <div class="coll-desc">{% if collection_handle.description != "" %}{{ collection_handle.description }}{% else %}Your favorite everyday companion. Ready-to-go bags and travel gear for everyday use.{% endif %}</div>
                <a class="coll-url" href="{{ collection_handle.url }}"><span class="coll-url-text">DISCOVER COLLECTION</span><span class="right-chev-svgs">{% include 'icon-red-right-chevron' %}{% include 'icon-red-right-chevron' %}</span></a>
              </div>
      </div>
    </div>
      {% endif %}
      </div>
    <a href="/collections" class="btn btn-center featured-coll-btn">SHOP COLLECTIONS</a>
  </div>
</div>

{% schema %}
  {
    "name": "Hedgren Discover Coll",
    "settings": [
		{
			"id": "title_left",
			"type": "text",
			"label": "Title Left"
		},
		{
			"id": "title_mid",
			"type": "text",
			"label": "Title Middle"
		},
		{
			"id": "title_right",
			"type": "text",
			"label": "Title Right"
		},
		{
			"id": "subtitle",
			"type": "text",
			"label": "Subtitle"
		}
	],
	"blocks": [
		{
			"type": "collect",
			"name": "Collection",
			"settings": [
				{
                    "id": "coll",
                    "type": "collection",
                    "label": "Select Collection"
                },
				{
                    "id": "page",
                    "type": "url",
                    "label": "Select Collection Page"
                }
			]
		}
	],
	"presets":[
      {
         "name":"Hedgren Discover Coll"
      }
   ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
