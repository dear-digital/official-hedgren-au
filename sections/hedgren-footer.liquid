      <li class="link-secondary">
        <a href="{{ link.url }}">{{ link.title | escape }} <span class="link-arows">{% include "svg-arrow" %}</span></a>
      </li>
      {% endif %}
      {% endif %}
      {%- endfor -%}
    </ul>
    {%- endif -%}
    <hr class="footer-hr no-d">
    {%- if section.settings.menu3 != blank -%}
    <ul class="footer-nav-col">
      {%- for link in section.settings.menu3.links -%}
      {% if forloop.first %}      
