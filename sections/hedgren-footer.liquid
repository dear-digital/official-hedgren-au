      {%- endfor -%}
    </ul>
    {%- endif -%}
    <hr class="footer-hr no-d">
    <ul class="footer-nav-col">
      <li class="link-heading">
        <a href="#">GET CONNECTED</a>
      </li>
      <li class="social-links">
        <a href="{{ settings.social_facebook_link }}" target="_blank" title="facebook" rel="noopener noreferrer">{% render "svg-facebook" %}</a>
        <a href="{{ settings.social_instagram_link }}" target="_blank" title="Instagram" rel="noopener noreferrer">{% render "svg-instagram" %}</a>
        <a href="{{ settings.social_pinterest_link }}" target="_blank" title="pinterest" rel="noopener noreferrer">{% render "svg-pinterest" %}</a>
        <a href="{{ settings.social_youtube_link }}" target="_blank" title="youtube" rel="noopener noreferrer">{% render "svg-youtube" %}</a>
      </li>
    </ul>
  </div>
  <hr class="footer-hr">
  <div class="footer-line flex-box justify-between">
    <div class="footer-line-left">
      <span>Â© 2022, Official Hedgren Store</span>
      <span>Powered by <a href="https://deardigital.be" target="_blank">dear digital</a></span>
    </div>
    <div class="footer-line-center">      
      {%- if section.settings.menu4 != blank -%}
      {%- for link in section.settings.menu4.links -%}
      <span><a href="{{ link.url }}">{{ link.title | escape }}</a></span>
      {%- endfor -%}
      {%- endif -%}
    </div>
    <div class="footer-line-right">
      {% for type in shop.enabled_payment_types %}
      <div class="payment-method"> 
        {{ type | payment_type_svg_tag: class: 'section-footer__payment-icon' }}
      </div>
      {% endfor %}
    </div>
  </div>
</footer>
