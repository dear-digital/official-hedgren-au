<link rel="stylesheet" href="{{ 'hedgren-footer.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'hedgren-footer.css' | asset_url | stylesheet_tag }}</noscript>
<div class="footer-wrapper">
<footer>
  <div class="footer-newsletter">
    {%- form 'customer' -%}
    <h3>
      Subscribe to hedgren
    </h3>
    {{ form.errors | default_errors }}
    {%- if form.posted_successfully? -%}
    <div class="note form-success">Newsletter subscribed successfully</div>
    {% else %}
    <div class="input-group">
      <input type="hidden" name="contact[tags]" value="newsletter">
      <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="email@example.com" name="contact[email]" id="Email" aria-label="email" autocorrect="off" autocapitalize="off">
      <input type="submit" name="commit" id="Subscribe" value="Subscribe">
    </div>
    {% endif %}
    {%- endform -%}
  </div>
  <hr class="footer-hr">
  <div class="footer-navs flex-box justify-between">
    {%- if section.settings.menu != blank -%}
    <ul class="footer-nav-col">
      {%- for link in section.settings.menu.links -%}
      {% if forloop.first %}      
      <li class="link-heading">
        <a href="#" onclick="return false;">{{ link.title | escape }}</a>
      </li>
      {% else %}
      {% assign first_letter = link.title | slice: 0 %}
      {% if first_letter == "-" %}
      <li class="link-primary">
        <a href="{{ link.url }}">{{ link.title | escape | remove_first: "-" }} <span class="link-arows">{% include "svg-arrow" %}{% include "svg-arrow" %}</span></a>
      </li>
      {% else %}
      <li class="link-secondary">
        <a href="{{ link.url }}">{{ link.title | escape }} <span class="link-arows">{% include "svg-arrow" %}</span></a>
      </li>
      {% endif %}
      {% endif %}
      {%- endfor -%}
    </ul>
    {%- endif -%}
    <hr class="footer-hr no-d">
    <ul class="footer-nav-col">
      <li class="link-heading">
        <a href="#">ABOUT HEDGREN</a>
      </li>
      <li class="link-secondary">
        <a href="#">OUR STORY <span class="link-arows">{% include "svg-arrow" %}</span></a>
      </li>
      <li class="link-secondary">
        <a href="#">OUR COMMUNITY <span class="link-arows">{% include "svg-arrow" %}</span></a>
      </li>
      <li class="link-secondary">
        <a href="#">OUR LOYALTY PROGRAM <span class="link-arows">{% include "svg-arrow" %}</span></a>
      </li>
    </ul>
    <hr class="footer-hr no-d">
    <ul class="footer-nav-col">
      <li class="link-heading">
        <a href="#">INFORMATION</a>
      </li>
      <li class="link-secondary">
        <a href="#">CONTACT <span class="link-arows">{% include "svg-arrow" %}</span></a>
      </li>
      <li class="link-secondary">
        <a href="#">FAQ <span class="link-arows">{% include "svg-arrow" %}</span></a>
      </li>
      <li class="link-secondary">
        <a href="#">STORE LOCATOR <span class="link-arows">{% include "svg-arrow" %}</span></a>
      </li>
    </ul>
    <hr class="footer-hr no-d">
    <ul class="footer-nav-col">
      <li class="link-heading">
        <a href="#">GET CONNECTED</a>
      </li>
      <li class="social-links">
        <a href="#">{% render "svg-facebook" %}</a>
        <a href="#">{% render "svg-instagram" %}</a>
        <a href="#">{% render "svg-pinterest" %}</a>
        <a href="#">{% render "svg-youtube" %}</a>
      </li>
    </ul>
  </div>
  <hr class="footer-hr">
  <div class="footer-line flex-box justify-between">
    <div class="footer-line-left">
      <span>Â© 2021, Official Hedgren Store</span>
      <span>Powered by <a href="https://deardigital.be" target="_blank">dear digital</a></span>
    </div>
    <div class="footer-line-center">
      <span><a href="#">Privacy Policy</a></span>
      <span><a href="#">Terms of Use</a></span>
      <span><a href="#">Cookie Policy</a></span>
    </div>
    <div class="footer-line-right">
      {% for type in shop.enabled_payment_types %}
      <div class="payment-method"> 
        {{ type | payment_type_svg_tag: class: 'section-footer__payment-icon' }}
      </div>
      {% endfor %}
    </div>
  </div>
</footer>
</div>
{% schema %}
  {
    "name": "Hedgren Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "menu",
        "default": "main-menu",
        "label": "Footer Column 1"
      },
      {
        "type": "link_list",
        "id": "menu2",
        "default": "main-menu",
        "label": "Footer Column 2"
      },
      {
        "type": "link_list",
        "id": "menu3",
        "default": "main-menu",
        "label": "Footer Column 3"
      },
      {
        "type": "link_list",
        "id": "menu4",
        "default": "main-menu",
        "label": "Sub Footer Column 4"
      }
	]
  }
{% endschema %}

