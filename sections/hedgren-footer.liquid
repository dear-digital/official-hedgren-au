      {%- if section.settings.menu4 != blank -%}
      {%- for link in section.settings.menu4.links -%}
      <span><a href="{{ link.url }}">{{ link.title | escape }}</a></span>
      {%- endfor -%}
      {%- endif -%}
    </div>
    <div class="footer-line-right">
      {% for type in shop.enabled_payment_types %}
      <div class="payment-method"> 
        {{ type | payment_type_svg_tag: class: 'section-footer__payment-icon' }}
      </div>
      {% endfor %}
