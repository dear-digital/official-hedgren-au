      {%- endfor -%}
    </ul>
    {%- endif -%}
    <hr class="footer-hr no-d">
    <ul class="footer-nav-col">
      <li class="link-heading">
        <a href="#">GET CONNECTED</a>
      </li>
      <li class="social-links">
        <a href="https://www.facebook.com/Hedgren.Bags/" target="_blank" title="facebook" rel="noopener noreferrer">{% render "svg-facebook" %}</a>
        <a href="https://www.instagram.com/hedgren_global/" target="_blank" title="Instagram" rel="noopener noreferrer">{% render "svg-instagram" %}</a>
        <a href="https://www.pinterest.com/hedgrenglobal/" target="_blank" title="pinterest" rel="noopener noreferrer">{% render "svg-pinterest" %}</a>
