{{ 'hedgren-collection-features.css' | asset_url | stylesheet_tag }}

<div class="hedgren-collection-features-wrapper {{ section.settings.background }}">
  <div class="container">
    <h2 class="hedgren-collection-features-heading">{{ section.settings.heading }}</h2>
    <div class="feature-subtitle no-d">{{ section.settings.selectabag }}</div>
    <div class="features-filter-wrap flex-box">
      <div class="filter selected">
        <div class="filter-img"><img src="{{ 'IMage_2x.png' | asset_img_url: '100x' }}"></div>
        <div class="filter-name">Quest</div>
      </div>
      <div class="filter">
        <div class="filter-img"><img src="{{ 'IMage_2x.png' | asset_img_url: '100x' }}"></div>
        <div class="filter-name">Quest</div>
      </div>
      <div class="filter">
        <div class="filter-img"><img src="{{ 'IMage_2x.png' | asset_img_url: '100x' }}"></div>
        <div class="filter-name">Quest</div>
      </div>
      <div class="filter">
        <div class="filter-img"><img src="{{ 'IMage_2x.png' | asset_img_url: '100x' }}"></div>
        <div class="filter-name">Quest</div>
      </div>
      <div class="feature-subtitle no-t-m">{{ section.settings.selectabag }}</div>
    </div>
    <div class="collection-features flex-box">
    	{% for block in section.blocks %}
      		{% if block.type == 'feature' %}
      			{% for i in (1..6) %}
      				<div class="feature-card{% if forloop.first %} selected{% endif %}">
                      <div class="feature-img">
                      	<img src="{{ block.settings.feature_img | img_url: "350x" }}">
                      </div>
                      <div class="feature-txt-wrap">
                        <div class="feature-title">{{ block.settings.feature_title }}</div>
                        <div class="feature-text">{{ block.settings.feature_text }}</div>
                      </div>
      				</div>
      			{% endfor %}
      		{% endif %}
      	{% endfor %}
    </div>
  </div>
</div>

<script>
  $('.filter').click(function() {
  	$('.filter').removeClass('selected');
    $(this).addClass('selected');
  });
</script>

{% schema %}
  {
    "name": "Hedgren Coll Features",
    "settings": [
		{
         "type":"select",
         "id":"background",
         "options":[
            {
               "value":"normal-bg",
               "label":"Normal background"
            },
            {
               "value":"dark-bg",
               "label":"Dark Background"
            }
         ],
         "default":"normal-bg",
         "label":"Choose background"
      },
		{
			"type": "text",
			"id": "heading",
			"label": "Heading"
		},
		{
			"type": "text",
			"id": "selectabag",
			"label": "Select text",
			"default": "SELECT A BAG"
		}
],
	"blocks": [
		{
			"type": "feature",
			"name": "Feature",
			"limit": 1,
			"settings": [
				{
					"type": "image_picker",
					"id": "feature_img",
					"label": "Feature Image"
				},
				{
					"type": "text",
					"id": "feature_title",
					"label": "Feature Title"
				},
				{
					"type": "text",
					"id": "feature_text",
					"label": "Feature Text"
				}
			]
		}
	],
   "presets":[
      {
         "name":"Hedgren Coll Features"
      }
   ]
  }
{% endschema %}

