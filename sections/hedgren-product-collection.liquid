    <div class="img-text-img rel">

      {% if collection.image %}
      <img loading="lazy" src="{{ collection.image | img_url: '350x' }}" alt="{{ collection.title }}">
      {% else %}
      {{ 'collection-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
    <div class="img-text-text rel">
      <h2 class="img-text-text-heading">
        The collection
      </h2>

      <div class="img-text-text-content">
        {{ collection.description }}
      </div>

      <a href="{{ collection.url }}" class="btn prod-coll-btn">
        SHOP COLLECTION
      </a>

    </div>  

  </div>
</div>
